<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_2_80"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp_5_x"
            android:layout_height="@dimen/dp_16_x"
            android:layout_marginStart="@dimen/width_4_80"
            android:background="@drawable/shape_main_button"/>

        <TextView
            android:id="@+id/tv_xiaolv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_4_80"
            android:layout_marginStart="@dimen/dp_10_x"
            android:text="每月固定大额总支出："
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_4"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_moneyToBig"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_marginRight="@dimen/width_4_80"
            android:background="@null"
            android:hint="￥0"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="@color/text_808080"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_4_80"
            android:text="（如房贷 ¥8000）"
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginRight="@dimen/width_4_80"
        android:background="@color/line2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_2_80"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp_5_x"
            android:layout_height="@dimen/dp_16_x"
            android:layout_marginStart="@dimen/width_4_80"
            android:background="@drawable/shape_main_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_4_80"
            android:layout_marginStart="@dimen/dp_10_x"
            android:text="每月固定生活总支出："
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_4"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_moneyToLife"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_marginRight="@dimen/width_4_80"
            android:background="@null"
            android:hint="￥0"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="@color/text_808080"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_4_80"
            android:text="（如花费 ¥200）"
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginRight="@dimen/width_4_80"
        android:background="@color/line2"/>


    <TextView
        android:id="@+id/iv_finish"
        style="@style/main_button"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:layout_marginTop="@dimen/height_10_80"
        android:text="完成"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_12_80"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4_80"
            android:text="*存钱效率=当月结余/（当月总支出-当月固定支出）"
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_marginTop="@dimen/height_0_80"
            android:text="*当月结余=单月收入-当月总支出"
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_marginTop="@dimen/height_0_80"
            android:text="* 固定支出不会自动记录到明细中，仅作为计算用"
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_marginTop="@dimen/height_0_80"
            android:text="* 每月修改数据只对当月有效，否则下个月生效。"
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_2"/>

    </LinearLayout>

</LinearLayout>