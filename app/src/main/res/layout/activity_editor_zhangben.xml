<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginTop="@dimen/width_4_80"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_title_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_2_80"
            android:text="账本名称"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_6"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shuru"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_80"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginRight="@dimen/width_4_80"
        android:layout_marginTop="@dimen/height_2_80"
        android:background="@color/bg_f0f0f0">

        <EditText
            android:id="@+id/et_zhangben_name"
            android:layout_width="@dimen/width_50_80"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width_1_80"
            android:background="@null"
            android:maxLength="20"
            android:text=""
            android:textColor="@color/text_bdbdbd"
            android:textSize="@dimen/text_size_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/width_2_80"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_hints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(20字以内)"
                android:textColor="@color/text_bdbdbd"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_4_80"
        android:layout_marginTop="@dimen/height_4_80">

        <RelativeLayout
            android:id="@+id/rl_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/width_12_80"
            android:layout_marginRight="@dimen/width_12_80"
            android:background="@drawable/btn_bg_login">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_6"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>