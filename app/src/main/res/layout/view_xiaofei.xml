<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/ll_image"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/width_4_80"
    android:layout_marginRight="@dimen/width_4_80"
    android:layout_marginTop="@dimen/width_4_80"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34_80"
                android:orientation="vertical"
                android:background="@mipmap/ic_bg_up">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_7_80"
                        android:layout_marginLeft="@dimen/width_4_80"
                        android:layout_marginRight="@dimen/width_4_80"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/height_3_80">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_logo"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的消费结构"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_6"
                                />
                            <TextView
                                android:id="@+id/tv_text_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_0_80"
                                android:text="(2018年8月)"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_4"
                                />
                        </LinearLayout>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/height_13_80">
                        <TextView
                            android:id="@+id/tv_text_precent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="100sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="25sp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/iv_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10_80"
                        android:background="@mipmap/ic_gz_work"
                        android:layout_gravity="right">
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_6_80"
                        android:layout_marginTop="@dimen/height_28_80"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_fg_left"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本 月 消 费 结 构 系 数"
                            android:layout_marginLeft="@dimen/width_2_80"
                            android:layout_marginRight="@dimen/width_2_80"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_4"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_fg_right"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_12_80"
                android:orientation="horizontal"
                android:background="@mipmap/ic_bg_down">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/width_4_80"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_ewm"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/width_2_80"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长按识别二维码"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_6"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_0_80"
                        android:text="记账理财管理，从蜂鸟记账开始"
                        android:textSize="@dimen/text_size_4"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginRight="@dimen/width_4_80"
        android:layout_marginTop="-4dp"
        android:src="@mipmap/ic_bg_slodw2"/>

</LinearLayout>
