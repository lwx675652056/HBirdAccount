<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="@dimen/width_10_80"
        android:layout_height="@dimen/height_5_80"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/width_2_80"  >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/nav_back_normal"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_2_80"
        android:src="@mipmap/ic_findma"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_6_80"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="11">
            <!--colorAccent  用来更改选框的颜色（styles里全局搜索修改样式）-->
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:paddingBottom="@dimen/height_2_80"
                android:inputType="phone"/>

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/right_password"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                app:counterEnabled="false"
                app:counterMaxLength="8"
                app:passwordToggleTintMode="src_in">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="验证码"
                    android:paddingBottom="@dimen/height_2_80"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/text_F15C3C"
                android:paddingTop="@dimen/height_2_80"
                android:paddingBottom="@dimen/height_1_80"
                android:layout_marginTop="@dimen/height_1_80"
                android:textSize="@dimen/text_size_2"/>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="false"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            app:passwordToggleTintMode="src_in">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:paddingBottom="@dimen/height_2_80"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
