<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_headers_zb"/>

    <View style="@style/horizontal_line"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40_x"
        android:src="@mipmap/icon_yqjzch_disabled"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20_x"
        android:text="每个账本最多5人记录，还可邀请5人"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"/>

    <com.hbird.base.mvc.widget.MyGridView
        android:id="@+id/grde_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:layout_marginTop="@dimen/height_2_80"
        android:background="@color/white"
        android:listSelector="#00000000"
        android:numColumns="5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_4_80"
        android:gravity="bottom">

        <TextView
            android:id="@+id/rl_wx_invite"
            style="@style/main_button"
            android:layout_marginEnd="@dimen/dp_15_x"
            android:layout_marginStart="@dimen/dp_15_x"
            android:text="微信邀请记账"/>
    </RelativeLayout>
</LinearLayout>