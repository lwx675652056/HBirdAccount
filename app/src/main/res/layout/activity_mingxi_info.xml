<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line2"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <LinearLayout
        android:id="@+id/ll_feilei_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_8_80"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_marginRight="@dimen/width_2_80"
        android:layout_marginTop="@dimen/height_2_80"
        android:background="@drawable/shape_editor3_infos"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_fenlei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="# 所属账本：旅行-出行账本 #"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_marginRight="@dimen/width_2_80"
        android:background="@drawable/shape_editor2_infos"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_marginRight="@dimen/width_4_80"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80">

                <RelativeLayout
                    android:id="@+id/rl_background"
                    android:layout_width="@dimen/width_8_80"
                    android:layout_height="@dimen/width_8_80"
                    android:background="@drawable/shape_cycle_blue"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="@dimen/height_3_80"
                        android:layout_height="@dimen/height_3_80"
                        android:padding="4dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/height_1_80"
                    android:layout_toLeftOf="@+id/tv_anli_shangchuanr"
                    android:text="意外收入"
                    android:textColor="@color/bg_A1C7F3"
                    android:textSize="@dimen/text_size_4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/width_5_80"
                        android:drawablePadding="@dimen/height_0_80"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/bg_A1C7F3"
                        android:textSize="@dimen/text_size_4"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/tv_anli_shangchuanr"
                    android:text="日期"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/text_size_4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_riqi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/width_5_80"
                        android:drawablePadding="@dimen/height_0_80"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_808080"
                        android:textSize="@dimen/text_size_4"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/tv_anli_shangchuanr"
                    android:text="类型"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/text_size_4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_leixing"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/width_5_80"
                        android:drawablePadding="@dimen/height_0_80"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_808080"
                        android:textSize="@dimen/text_size_4"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="记录人"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/text_size_4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.hbird.base.mvc.widget.cycleView
                        android:id="@+id/img_head"
                        android:layout_width="@dimen/width_6_80"
                        android:layout_height="@dimen/width_6_80"
                        android:layout_gravity="bottom|center"
                        android:src="@mipmap/ic_me_normal_headr"
                        app:border_color="@color/bg_e6e6e6"
                        app:border_width="1dp"
                        app:type="circle"/>

                    <TextView
                        android:id="@+id/tv_jlr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/width_5_80"
                        android:drawablePadding="@dimen/height_0_80"
                        android:gravity="center_vertical"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/text_808080"
                        android:textSize="@dimen/text_size_4"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"/>

            <LinearLayout
                android:id="@+id/ll_xinqings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/tv_anli_shangchuanr"
                    android:text="购买心情"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/text_size_4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_mood"
                        android:layout_width="@dimen/height_3_80"
                        android:layout_height="@dimen/height_3_80"
                        android:layout_toLeftOf="@+id/tv_pay_num"
                        android:src="@mipmap/ic_mood1"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2"/>

            <LinearLayout
                android:id="@+id/text_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_10_80"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/text_size_4"/>

                <TextView
                    android:id="@+id/tv_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:maxLength="20"
                    android:maxLines="2"
                    android:text="备注空间是否速度快解放后的思考开奖号就开始电话费"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/text_size_4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tv_editor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_editors"
                    android:drawablePadding="@dimen/width_2_80"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/width_3_80"
                    android:text="编辑"
                    android:textColor="@drawable/item_text_hint"
                    android:textSize="@dimen/text_size_8"/>
            </RelativeLayout>

            <View
                android:id="@+id/views"
                android:layout_width="1dp"
                android:layout_height="@dimen/height_3_80"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_editor"
                android:background="@color/line2"/>

            <RelativeLayout
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_delete"
                    android:drawablePadding="@dimen/width_2_80"
                    android:padding="@dimen/width_3_80"
                    android:text="删除"
                    android:textColor="@drawable/item_text_hint"
                    android:textSize="@dimen/text_size_8"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
