<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_guide_zhi"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_choose_types"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginTop="@dimen/height_2_80"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_guide_know"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginTop="@dimen/height_6_80"/>

</LinearLayout>