<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_6_80"
        android:src="@mipmap/login_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_18_80"
        android:layout_marginRight="@dimen/width_18_80"
        android:layout_marginTop="@dimen/height_5_80"
        android:layout_marginBottom="@dimen/height_5_80"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_4_80"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_left"
                style="@style/radio_head_bg"
                android:background="@drawable/radio_head_btn_bg_left"
                android:checked="true"
                android:text="密码登录" />

            <RadioButton
                android:id="@+id/radio_right"
                style="@style/radio_head_bg"
                android:background="@drawable/radio_head_btn_bg_right"
                android:text="验证码登录" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_left_content"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="11">
            <!--colorAccent  用来更改选框的颜色（styles里全局搜索修改样式）-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:paddingBottom="@dimen/height_2_80"
                android:inputType="phone"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="false"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            app:passwordToggleTintMode="src_in">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:paddingBottom="@dimen/height_2_80"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/height_2_80">
            <TextView
                android:id="@+id/tv_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_text_forget_pwd"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_6"
                android:textColor="@color/text_808080"/>
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_6"
                android:gravity="bottom"
                android:textColor="@color/text_468DE1"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/right_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="11">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:paddingBottom="@dimen/height_2_80"
                android:inputType="phone"/>

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/right_password"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                app:counterEnabled="false"
                app:counterMaxLength="8"
                app:passwordToggleTintMode="src_in">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:paddingBottom="@dimen/height_2_80" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/text_F15C3C"
                android:paddingTop="@dimen/height_2_80"
                android:paddingBottom="@dimen/height_1_80"
                android:layout_marginTop="@dimen/height_1_80"
                android:textSize="@dimen/text_size_2"/>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/height_2_80">

                <TextView
                    android:id="@+id/tv_right_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_6"
                    android:gravity="bottom"
                    android:textColor="@color/text_468DE1"/>

            </RelativeLayout>

    </LinearLayout>
    <!-- android:background="@drawable/btn_bg_login"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/height_4_80"
        android:orientation="vertical">
        <com.hbird.base.mvc.widget.RippleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ripple:rv_rippleDuration="100"
            ripple:rv_type="rectangle"
            ripple:rv_zoom="true">
            <RelativeLayout
                android:id="@+id/iv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_6_80"
                android:layout_marginTop="@dimen/height_6_80"
                android:layout_marginLeft="@dimen/width_10_80"
                android:layout_marginRight="@dimen/width_10_80"
                android:background="@drawable/shape_btn_login_hui">
                <TextView
                    android:id="@+id/bt_my_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_6" />
            </RelativeLayout>
        </com.hbird.base.mvc.widget.RippleView>

        <!-- <Button
             android:id="@+id/iv_login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="@dimen/height_6_80"
             android:layout_marginLeft="@dimen/width_10_80"
             android:layout_marginRight="@dimen/width_10_80"
             android:background="@drawable/btn_bg_login"
             android:text="登录"
             android:textColor="@color/white"
             android:textSize="16sp"/>-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_1_80"
            android:layout_marginBottom="@dimen/height_1_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80">
            <View
                android:layout_marginTop="@dimen/height_2_80"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_cccccc"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_4"
                android:textColor="@color/bg_cdcdcd"
                android:padding="@dimen/height_1_80"
                android:background="@color/white"
                />


        </FrameLayout>
        <LinearLayout
            android:id="@+id/iv_wx_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:gravity="center"
            android:background="@drawable/btn_bg_add">
            <TextView
                android:id="@+id/bt_save_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="微信登录"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_weix"
                android:drawablePadding="@dimen/width_2_80"
                android:textSize="@dimen/text_size_6"
                android:textColor="@drawable/textviews"/>
        </LinearLayout>
    </LinearLayout>



    <!--<ImageView
        android:id="@+id/iv_wx_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/login_wx_line"/>-->

</LinearLayout>