<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_white_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/height_5_80"
        android:layout_marginLeft="@dimen/width_18_80"
        android:layout_marginRight="@dimen/width_18_80"
        android:layout_marginTop="@dimen/height_5_80"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_4_80"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_left"
                style="@style/radio_head_bg"
                android:background="@drawable/select_login_left"
                android:checked="true"
                android:text="密码登录"/>

            <RadioButton
                android:id="@+id/radio_right"
                style="@style/radio_head_bg"
                android:background="@drawable/select_login_right"
                android:text="验证码登录"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_left_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="11">
            <!--colorAccent  用来更改选框的颜色（styles里全局搜索修改样式）-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:paddingBottom="@dimen/height_2_80"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="false"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            app:passwordToggleTintMode="src_in">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tie_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/height_2_80"/>

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2_80"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/login_text_forget_pwd"
                android:textColor="@color/text_808080"
                android:textSize="@dimen/text_size_6"/>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:text="注册"
                android:textColor="@color/text_468DE1"
                android:textSize="@dimen/text_size_6"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/right_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="11">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:paddingBottom="@dimen/height_2_80"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/right_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:counterEnabled="false"
                app:counterMaxLength="8"
                app:passwordToggleTintMode="src_in">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:paddingBottom="@dimen/height_2_80"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_1_80"
                android:layout_weight="1"
                android:paddingBottom="@dimen/height_1_80"
                android:paddingTop="@dimen/height_2_80"
                android:text="获取验证码"
                android:textColor="@color/text_F15C3C"
                android:textSize="@dimen/text_size_2"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2_80"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:text="注册"
                android:textColor="@color/text_468DE1"
                android:textSize="@dimen/text_size_6"/>

        </RelativeLayout>

    </LinearLayout>
    <!-- android:background="@drawable/btn_bg_login"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/height_4_80"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.hbird.base.mvc.widget.RippleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ripple:rv_rippleDuration="100"
            ripple:rv_type="rectangle"
            ripple:rv_zoom="true">

            <RelativeLayout
                android:id="@+id/iv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_6_80"
                android:layout_marginLeft="@dimen/width_10_80"
                android:layout_marginRight="@dimen/width_10_80"
                android:layout_marginTop="@dimen/height_6_80"
                android:background="@drawable/shape_btn_login_hui">

                <TextView
                    android:id="@+id/bt_my_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_6"/>
            </RelativeLayout>
        </com.hbird.base.mvc.widget.RippleView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_1_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:layout_marginTop="@dimen/height_1_80">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/height_2_80"
                android:background="@color/bg_cccccc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:background="@color/white"
                android:padding="@dimen/height_1_80"
                android:text="or"
                android:textColor="@color/bg_cdcdcd"
                android:textSize="@dimen/text_size_4"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/iv_wx_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:background="@drawable/btn_bg_add"
            android:gravity="center">

            <TextView
                android:id="@+id/bt_save_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@mipmap/icon_weix"
                android:drawablePadding="@dimen/width_2_80"
                android:gravity="center"
                android:text="微信登录"
                android:textColor="@drawable/textviews"
                android:textSize="@dimen/text_size_6"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>