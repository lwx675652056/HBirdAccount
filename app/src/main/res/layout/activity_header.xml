<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_6_80"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/iv_back_web"
        android:layout_width="@dimen/width_8_80"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_return_white"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_2_80"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/width_4_80"
        android:text="蜂鸟记账"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"/>
    <TextView
        android:id="@+id/center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="图表"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/width_4_80"
        android:text="记一笔"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:drawableRight="@mipmap/ic_add"
        android:layout_alignParentRight="true"
        android:drawablePadding="@dimen/width_2_80"
        android:textSize="@dimen/text_size_6"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/right_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/width_4_80"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_6"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_shezhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shezhi_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/width_4_80"
        android:layout_marginLeft="@dimen/width_4_80"/>
    <ImageView
        android:id="@+id/iv_xiaoxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/xiaoxi_normal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/width_4_80"/>

</RelativeLayout>