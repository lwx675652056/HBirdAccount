<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View style="@style/horizontal_line"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_50_x"
        android:layout_marginStart="@dimen/dp_50_x"
        android:layout_marginTop="@dimen/dp_60_x"
        android:background="@null"
        android:hint="请输入手机号"
        android:paddingBottom="@dimen/dp_15_x"
        android:paddingTop="@dimen/dp_15_x"
        android:textColor="#333333"
        android:textColorHint="#868686"
        android:textSize="16sp"/>

    <View
        style="@style/horizontal_line"
        android:layout_marginEnd="@dimen/dp_50_x"
        android:layout_marginStart="@dimen/dp_50_x"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_50_x"
        android:layout_marginStart="@dimen/dp_50_x"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingBottom="@dimen/dp_15_x"
            android:paddingTop="@dimen/dp_15_x"
            android:textColor="#333333"
            android:textColorHint="#868686"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15_x"
            android:paddingStart="@dimen/dp_15_x"
            android:paddingTop="@dimen/dp_15_x"
            android:text="获取验证码"
            android:textColor="@color/colorBase"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginEnd="@dimen/dp_50_x"
        android:layout_marginStart="@dimen/dp_50_x"/>


    <LinearLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_50_x"
        android:layout_marginStart="@dimen/dp_50_x"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/dp_15_x"
            android:paddingTop="@dimen/dp_15_x"
            android:textColor="#333333"
            android:textColorHint="#868686"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/setpwd_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15_x"
            android:paddingStart="@dimen/dp_15_x"
            android:paddingTop="@dimen/dp_15_x"
            android:src="@drawable/icon_mmbkj_normal"/>
    </LinearLayout>

    <View
        android:id="@+id/temp"
        style="@style/horizontal_line"
        android:layout_marginEnd="@dimen/dp_50_x"
        android:layout_marginStart="@dimen/dp_50_x"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_4_80"
        android:gravity="bottom">

        <TextView
            android:id="@+id/iv_login"
            style="@style/main_button"
            android:layout_marginEnd="@dimen/dp_50_x"
            android:layout_marginStart="@dimen/dp_50_x"
            android:text="绑定"/>
    </RelativeLayout>
</LinearLayout>