<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_1_80"
        android:layout_marginBottom="@dimen/height_1_80"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wxs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/ic_wxs"
            android:drawablePadding="@dimen/width_1_80"
            android:layout_height="wrap_content"
            android:text="微信"/>
        <TextView
            android:id="@+id/tv_wxf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_wx_f"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/width_1_80"
            android:layout_height="wrap_content"
            android:text="朋友圈"/>

    </LinearLayout>
</LinearLayout>
