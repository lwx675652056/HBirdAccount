<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_18_80"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_tv"
            android:layout_width="@dimen/width_18_80"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="1月份"
            android:textSize="@dimen/text_size_2"
            android:layout_marginBottom="@dimen/height_0_80"
            android:textColor="@color/text_808080"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="@dimen/height_3_80">
            <!--<View
                android:layout_width="@dimen/width_10_80"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/gray_c"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                >

                <com.hbird.base.mvc.widget.IndicatorChartProgressBar
                    xmlns:indicator="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressBar"
                    style="@style/Widget.ProgressBar.IndicatorProgressBarStyleSecond"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/indicator_chart_progress_bar"
                    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                    android:layout_width="@dimen/width_8_80"
                    android:layout_height="match_parent"
                    indicator:textAlign="center"
                    indicator:textSize="@dimen/text_size_2"
                    android:layout_marginTop="@dimen/height_0_80"
                    />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/line2"/>
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2_80"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line2"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chart_check"
            android:visibility="gone"
            />
    </FrameLayout>

</RelativeLayout>
