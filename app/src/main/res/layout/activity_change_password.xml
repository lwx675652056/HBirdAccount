<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:layout_marginTop="@dimen/height_6_80"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15_x"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/dp_10_x"
                android:paddingTop="@dimen/dp_10_x"
                android:textColor="#333333"
                android:textSize="16sp"/>
        </LinearLayout>

        <View style="@style/horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15_x"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/dp_10_x"
                android:paddingTop="@dimen/dp_10_x"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/setpwd2_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_10_x"
                android:src="@drawable/icon_mmbkj_normal"/>
        </LinearLayout>

        <View style="@style/horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15_x"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/dp_10_x"
                android:paddingTop="@dimen/dp_10_x"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/setpwd_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_10_x"
                android:src="@drawable/icon_mmbkj_normal"/>
        </LinearLayout>

        <View style="@style/horizontal_line"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_4_80"
        android:gravity="bottom">

        <TextView
            style="@style/main_button"
            android:id="@+id/iv_login"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:layout_marginTop="@dimen/height_6_80"
            android:text="修改"/>
    </RelativeLayout>
</LinearLayout>