<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/activity_headers"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line2"/>
    <LinearLayout
        android:id="@+id/ll_choose_items"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_8_80"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginRight="@dimen/width_4_80"
        android:visibility="gone"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_img_bg"
            android:layout_width="@dimen/width_10_80"
            android:layout_height="@dimen/width_10_80"
            android:layout_gravity="center"
            android:background="@drawable/shape_cycle_blue"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_img"
                android:padding="4dp"
                android:layout_width="@dimen/width_6_80"
                android:layout_height="@dimen/width_6_80" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_choose_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饮食"
            android:layout_marginLeft="@dimen/width_3_80"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_4"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line2"/>

    <ExpandableListView
        android:id="@+id/expandableList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>