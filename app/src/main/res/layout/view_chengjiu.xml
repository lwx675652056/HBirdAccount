<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/ll_image"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/width_4_80"
    android:layout_marginRight="@dimen/width_4_80"
    android:layout_marginTop="@dimen/height_1_80"
    android:layout_height="wrap_content">
    <ScrollView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_36_80"
                android:layout_gravity="center_horizontal"

                android:background="@mipmap/img_bgs">
                 <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/height_36_80">
                   <ImageView
                       android:id="@+id/rl_bgs"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@mipmap/ic_me_normal_headr"
                       android:scaleType="fitXY"
                       />
               </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_head"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_4_80">
                    <com.hbird.base.mvc.widget.cycleView
                        android:id="@+id/iv_avata"
                        android:layout_width="@dimen/width_16_80"
                        android:layout_height="@dimen/width_16_80"
                        android:layout_gravity="bottom|center"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_me_normal_headr"
                        app:border_color="@color/bg_e6e6e6"
                        app:border_width="2dp"
                        app:type="circle"/>
                    <TextView
                        android:id="@+id/tv_names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_4"
                        android:text="123"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/height_1_80"
                        android:textColor="@color/white"
                        android:layout_below="@id/iv_avata"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_below="@id/rl_head">
                    <LinearLayout
                        android:id="@+id/ll_shai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/width_4_80"
                        android:layout_marginRight="@dimen/width_4_80">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_1_80"
                            android:layout_marginBottom="@dimen/width_1_80">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_6_80"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_tuijianf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01"
                                    android:textSize="@dimen/text_size_4"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_marginTop="@dimen/height_0_80"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="邀请/推荐好友"
                                    android:layout_below="@id/tv_month_day"
                                    android:textSize="@dimen/text_size_2"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/height_4_80"
                            android:layout_marginLeft="@dimen/width_3_80"
                            android:layout_marginRight="@dimen/width_3_80"
                            android:background="@color/line2"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_1_80"
                            android:layout_marginBottom="@dimen/width_1_80">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_6_80"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_month_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--/--"
                                    android:textSize="@dimen/text_size_4"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/tv_month"
                                    android:layout_marginTop="@dimen/height_0_80"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="本月记账天数"
                                    android:layout_below="@id/tv_month_day"
                                    android:textSize="@dimen/text_size_2"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/height_4_80"
                            android:layout_marginLeft="@dimen/width_3_80"
                            android:layout_marginRight="@dimen/width_3_80"
                            android:background="@color/line2"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_1_80">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_6_80"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_account_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="@dimen/text_size_4"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/tv_account"
                                    android:layout_marginTop="@dimen/height_0_80"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="记账总笔数"
                                    android:layout_below="@id/tv_month_day"
                                    android:textSize="@dimen/text_size_2"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_bgsd"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/width_4_80"
                    android:layout_marginRight="@dimen/width_4_80">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_logo"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_ewm"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2px"
                android:src="@mipmap/img_bgsd_end"/>

        </LinearLayout>

    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_marginRight="@dimen/width_2_80"
        android:layout_marginTop="-8dp"
        android:src="@mipmap/ic_bg_slodw2"/>
</LinearLayout>
