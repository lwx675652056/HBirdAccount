        android:id="@+id/bt_save_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6_80"
        android:layout_marginLeft="@dimen/width_13_80"
        android:layout_marginRight="@dimen/width_13_80"
        android:layout_marginTop="@dimen/height_3_80"
        android:background="@drawable/btn_bg_add"
        android:text="保存并继续添加"
        android:textSize="@dimen/text_size_4"
        android:textColor="@drawable/btn_bg_text"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom">
        <include layout="@layout/item_soft_keys"/>
    </LinearLayout>



</LinearLayout>