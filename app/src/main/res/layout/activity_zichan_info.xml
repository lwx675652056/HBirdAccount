<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f6">
    <include layout="@layout/activity_headers"/>
    <LinearLayout
        android:id="@+id/ll_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/width_4_80"
        android:paddingRight="@dimen/width_4_80"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_10_80"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_xianjin01"/>
            <TextView
                android:id="@+id/xianjin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金"
                android:textColor="@color/text_333333"
                android:layout_marginLeft="@dimen/width_2_80"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:orientation="horizontal"
                android:background="@null">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="@dimen/text_size_8"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_333333"
                    android:layout_marginRight="@dimen/width_1_80"
                    android:layout_alignRight="@id/tv_money"/>
                <EditText
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:digits="1234567890.-"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/width_2_80"
                    android:textColor="@color/text_333333"
                    android:background="@null"
                    android:textSize="@dimen/text_size_8"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_save_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6_80"
        android:layout_marginTop="@dimen/height_5_80"
        android:layout_marginBottom="@dimen/height_2_80"
        android:layout_marginLeft="@dimen/width_6_80"
        android:layout_marginRight="@dimen/width_6_80"
        android:background="@drawable/btn_bg_login">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_6" />
    </RelativeLayout>


</LinearLayout>