<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View style="@style/horizontal_line"/>

    <include layout="@layout/view_chengjiu"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10_x"
        android:layout_marginTop="@dimen/dp_10_x"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_xiazai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5_x"
            android:drawableTop="@mipmap/ic_loading"
            android:gravity="center_horizontal"
            android:text="下载到本地"/>

        <TextView
            android:id="@+id/tv_wxs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5_x"
            android:drawableTop="@mipmap/ic_wxs"
            android:gravity="center_horizontal"
            android:text="微信"/>

        <TextView
            android:id="@+id/tv_wxf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5_x"
            android:drawableTop="@mipmap/ic_wx_f"
            android:gravity="center_horizontal"
            android:text="朋友圈"/>

    </LinearLayout>
</LinearLayout>