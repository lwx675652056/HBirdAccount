<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lLayout_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/height_1_80"
              android:background="@drawable/bg_pop_shapes"
              android:orientation="vertical" >
    <TextView
        android:id="@+id/title_xxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="@color/text_333333"
        android:textSize="18sp"
        android:text="标题" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_2_80"
        android:gravity="center"
        android:textColor="@color/text_808080"
        android:text="内容123456"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFEFF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FEFEFF"
            android:text="取消"
            android:textColor="@color/text_333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/height_4_80"
            android:background="@color/line2" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FEFEFF"
            android:textColor="@color/colorPrimary"
            android:text="删除"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>