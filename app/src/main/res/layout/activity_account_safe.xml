<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15_x"
        android:layout_marginEnd="@dimen/dp_15_x"
        android:layout_marginStart="@dimen/dp_15_x"
        android:layout_marginTop="@dimen/dp_25_x"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_5_x"
            android:layout_height="@dimen/dp_16_x"
            android:background="@drawable/shape_main_button"/>

        <TextView
            android:id="@+id/tv_fangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10_x"
            android:text="当前登录方式（手机号）"
            android:textColor="@color/text_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_white_0px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10_x"
        android:paddingEnd="@dimen/dp_15_x"
        android:paddingStart="@dimen/dp_15_x"
        android:paddingTop="@dimen/dp_10_x">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15_x"
            android:text="手机号"
            android:textColor="@color/text_333333"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_arrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_me_arrow"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15_x"
                android:layout_toLeftOf="@id/iv_arrows"
                android:text="177-4458-8290"
                android:textColor="@color/text_808080"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_15_x"
        android:paddingStart="@dimen/dp_15_x">

        <View style="@style/horizontal_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_white_0px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10_x"
        android:paddingEnd="@dimen/dp_15_x"
        android:paddingStart="@dimen/dp_15_x"
        android:paddingTop="@dimen/dp_10_x">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_weixin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15_x"
            android:text="微信"
            android:textColor="@color/text_333333"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_me_arrow"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_wx_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_15_x"
                android:text="去绑定"
                android:textColor="@color/text_468DE1"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_15_x"
        android:paddingStart="@dimen/dp_15_x">

        <View style="@style/horizontal_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_safekey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_white_0px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10_x"
        android:paddingTop="@dimen/dp_10_x">

        <ImageView
            android:layout_width="@dimen/dp_15_x"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_weixin"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改登录密码"
            android:textColor="@color/text_333333"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_15_x"
            android:src="@mipmap/ic_me_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/temp1"
        style="@style/horizontal_line"
        android:layout_marginEnd="@dimen/dp_15_x"
        android:layout_marginStart="@dimen/dp_15_x"/>

    <LinearLayout
        android:id="@+id/ll_modifi_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_white_0px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10_x"
        android:paddingTop="@dimen/dp_10_x">

        <ImageView
            android:layout_width="@dimen/dp_15_x"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_weixin"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改手机号"
            android:textColor="@color/text_333333"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15_x"
            android:src="@mipmap/ic_me_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/temp2"
        style="@style/horizontal_line"
        android:layout_marginEnd="@dimen/dp_15_x"
        android:layout_marginStart="@dimen/dp_15_x"/>

    <LinearLayout
        android:id="@+id/ll_wx_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_white_0px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10_x"
        android:paddingTop="@dimen/dp_10_x"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_15_x"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_weixin"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="解除绑定微信号"
            android:textColor="@color/text_333333"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15_x"
            android:src="@mipmap/ic_me_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/temp"
        style="@style/horizontal_line"
        android:layout_marginEnd="@dimen/dp_15_x"
        android:layout_marginStart="@dimen/dp_15_x"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/rl_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30_x"
        android:layout_marginEnd="@dimen/dp_15_x"
        android:layout_marginStart="@dimen/dp_15_x"
        android:background="@drawable/select_main_button"
        android:gravity="center"
        android:padding="@dimen/dp_15_x"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</LinearLayout>