<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:layout_marginTop="@dimen/height_4_80"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_2_80"
            android:gravity="center_horizontal"
            android:text="为了保证您的账户安全，请先验证身份"
            android:textColor="@color/text_808080"
            android:textSize="@dimen/text_size_4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80"
                android:text="原手机号："
                android:textColor="@color/text_333333"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80"
                android:textColor="@color/text_cdcdcd"
                android:textColorHint="#868686"
                android:textSize="@dimen/text_size_5"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/height_1_80"
            android:background="@color/line_f0f0f0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="@dimen/width_40_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingBottom="@dimen/height_2_80"
                android:paddingTop="@dimen/height_2_80"
                android:textColor="@color/text_cdcdcd"
                android:textColorHint="#868686"
                android:textSize="@dimen/text_size_5"/>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/height_1_80"
                android:paddingBottom="@dimen/height_1_80"
                android:paddingTop="@dimen/height_1_80"
                android:text="获取验证码"
                android:textColor="@color/text_F15C3C"
                android:textSize="@dimen/text_size_2"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/height_1_80"
            android:background="@color/line_f0f0f0"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_4_80"
        android:gravity="bottom">

        <RelativeLayout
            android:id="@+id/iv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_marginRight="@dimen/width_10_80"
            android:background="@drawable/shape_btn_login_hui">

            <TextView
                android:id="@+id/bt_my_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_6"/>
        </RelativeLayout>
    </RelativeLayout>

    <!--  <Button
          android:id="@+id/bt_my_login"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/height_8_80"
          android:layout_marginLeft="@dimen/width_10_80"
          android:layout_marginRight="@dimen/width_10_80"
          android:background="@drawable/button_orange_bg_selector"
          android:text="下一步"
          android:textColor="@color/white"
          android:textSize="18sp" />-->

</LinearLayout>