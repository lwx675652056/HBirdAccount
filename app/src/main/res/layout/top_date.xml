<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/height_9_80"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_weight="1.1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_9_80"
        android:paddingLeft="@dimen/width_2_80"
        android:paddingRight="@dimen/width_3_80"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/data_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018 年"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_marginTop="@dimen/height_1_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:singleLine="true"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:drawableRight="@mipmap/ic_down"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/width_1_80"
                android:textSize="15sp"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="41dp"
        android:background="#FFFFFF"/>
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/width_4_80"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/zhichu_jian"
                android:layout_marginTop="@dimen/width_3_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/cash_surplus"
                android:layout_marginTop="@dimen/width_3_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/width_4_80"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/zhichu_jia"
                android:layout_marginTop="@dimen/width_3_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/cash_compared"
                android:layout_marginTop="@dimen/width_3_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>