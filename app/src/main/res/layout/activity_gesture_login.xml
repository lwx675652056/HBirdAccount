<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/activity_headers"/>

    <View style="@style/horizontal_line"/>

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_8_80"
        android:textSize="@dimen/text_size_6"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_2_80"
        android:orientation="vertical">

        <com.hbird.base.mvc.widget.LockPatternView
            android:id="@+id/lockPatternView"
            android:layout_width="@dimen/width_60_80"
            android:layout_height="@dimen/width_60_80"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80"
            android:layout_marginTop="@dimen/height_3_80">

            <TextView
                android:id="@+id/forgetGestureBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:padding="@dimen/width_1_80"
                android:text="@string/gesture_forget_gesture"
                android:textColor="@color/text_468DE1"
                android:textSize="@dimen/text_size_6"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>