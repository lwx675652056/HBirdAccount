<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IndicatorProgressBar">
        <attr name="progressIndicator" format="reference"></attr>
        <attr name="xOffsetIndicator" format="dimension"></attr>
        <attr name="yOffsetIndicator" format="dimension"></attr>

        <attr name="textSize" format="dimension"></attr>
        <attr name="textColor" format="reference|color"></attr>

        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="textAlign">
            <flag name="left" value="0" />
            <flag name="center" value="1" />
            <flag name="right" value="2" />
        </attr>

    </declare-styleable>
    <!--loading dialoag-->
    <declare-styleable name="SpinnerLoader">
        <attr name="point_color" format="color" />
        <attr name="isdynamic" format="boolean" />
    </declare-styleable>
    <!--perfectControlImage-->
    <declare-styleable name="PerfectControlImageView">
        <attr name="titleHeight" format="dimension"/>
    </declare-styleable>
    <!--CuttingFrameView-->
    <declare-styleable name="CuttingFrameView">
        <attr name="headerHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <!--是否显示农历-->
        <attr name="show_lunar" format="boolean" />
        <!--是否显示上月和下月-->
        <attr name="show_last_next" format="boolean" />
        <!--是否显示节假日-->
        <attr name="show_holiday" format="boolean" />
        <!--是否显示节气-->
        <attr name="show_term" format="boolean" />
        <!--阳历的日期颜色-->
        <attr name="solar_color" format="color" />
        <!--阳历的日期尺寸-->
        <attr name="solar_size" format="integer" />
        <!--农历的日期颜色-->
        <attr name="lunar_color" format="color" />
        <!--农历的日期尺寸-->
        <attr name="lunar_size" format="integer" />
        <!--节日文字颜色-->
        <attr name="holiday_color" format="color" />
        <!--选中的日期文字颜色-->
        <attr name="choose_color" format="color" />
        <!--选中的日期背景-->
        <attr name="day_bg" format="reference" />
        <!--单选时切换月份，是否选中上次的日期-->
        <attr name="switch_choose" format="boolean" />
        <!--设置单选、多选-->
        <attr name="choose_type" format="enum">
            <enum name="single" value="0" />
            <enum name="multi" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WeekView">
        <!--周的表示形式（x.x.x.x.x.x.x）-->
        <attr name="week_str" format="string" />
        <!--周的文字颜色-->
        <attr name="week_color" format="color" />
        <!--周的文字大小-->
        <attr name="week_size" format="integer" />
    </declare-styleable>

    <!-- style for MaterialRefreshLayout  -->
    <declare-styleable name="MaterialRefreshLayout">
        <attr name="overlay" format="boolean"/>
        <!-- style for MaterialWaveView  -->
        <attr name="wave_height_type" format="enum">
            <enum name="normal" value="0"/>
            <enum name="higher" value="1"/>
        </attr>
        <attr name="wave_color" format="color"/>
        <attr name="wave_show" format="boolean"/>
        <!-- style for CircleProgressBar  -->
        <attr name="progress_colors" format="reference"/>
        <attr name="progress_stoke_width" format="dimension"/>
        <attr name="progress_backgroud_color" format="color"/>
        <attr name="progress_show_arrow" format="boolean"/>
        <attr name="progress_arrow_width" format="dimension"/>
        <attr name="progress_arrow_height" format="dimension"/>
        <attr name="progress_show_circle_backgroud" format="boolean"/>
        <attr name="progress_value" format="integer"/>
        <attr name="progress_max_value" format="integer"/>
        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
        <attr name="progress_size_type" format="enum">
            <enum name="normal" value="0"></enum>
            <enum name="big" value="1"></enum>
        </attr>
        <attr name="isLoadMore" format="boolean"></attr>
    </declare-styleable>
</resources>
